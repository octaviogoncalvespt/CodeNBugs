@model IEnumerable<Challenge>

@{
    ViewData["Title"] = "List of Challenges";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ChallengeImage)</th>
                    <th>@Html.DisplayNameFor(model => model.CorrectAnswer)</th>
                    <th>@Html.DisplayNameFor(model => model.DiscountCode)</th>
                    <th>@Html.DisplayNameFor(model => model.ValidUntil)</th>
                    <th>@Html.DisplayNameFor(model => model.ActiveDate)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ImgURL("codenbugssa","codenbugsproductsimg")" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.CorrectAnswer)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.DiscountCode)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ActiveDate)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ValidUntil)
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ChallengeId"><i class="bi bi-trash"></i>Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Challenge" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>