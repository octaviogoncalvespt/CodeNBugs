@model Product
@{
    ViewData["Title"] = "Product details";
}

<div class="row">


    <div class="col-md-8 offset-2">
        <div class="card mb-12">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @Model.ProductName
                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-4">
                    <img src="@Model.ImgURL("codenbugssa","codenbugsproductsimg")" width="100%" alt="@Model.ProductName">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <p class="card-text">
                            <b>Category :</b> @ViewBag.Category
                        </p>
                        <p class="card-text">
                            <b>Description :</b> @Model.ProductDescription
                        </p>
                        <p class="card-text ">
                            <b>Stock: @Model.ProductStock </b>
                        </p>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer ">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Index">
                                Back to List
                            </a>
                            <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@Model.ProductId">
                                <i class="bi bi-cart-plus"></i> Add to Cart @Model.ProductPrice.ToString("0.00")
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>


</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
        <a asp-controller="Product" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
    </div>
}