@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Delete confirmation for @Model.ProductName</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <div class="form-group text-center">
                    <img class="border-info rounded-circle" src="@Model.ImgURL("codenbugssa","codenbugsproductsimg")" style="max-width: 150px; max-height: 150px;" alt="@Model.ProductName" />
                </div>
                <div class="form-group">
                    <label asp-for="ProductImage" class="control-label"></label>
                    <input type="hidden" id="ProductImage" name="ProductImage" value="Empty" readonly />
                    <span asp-validation-for="ProductImage" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductName" class="control-laber"></label>
                    <input asp-for="ProductName" class="form-control" readonly />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Category.CategoryName" class="control-label">Category</label>
                    <input asp-for="Category.CategoryName" class="form-control" readonly />
                    <span asp-validation-for="Category.CategoryName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDescription" class="control-laber"></label>
                    <input asp-for="ProductDescription" class="form-control" readonly />
                    <span asp-validation-for="ProductDescription" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductPrice" class="control-laber"></label>
                    <input asp-for="ProductPrice" class="form-control" readonly />
                    <span asp-validation-for="ProductPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductStock" class="control-laber"></label>
                    <input asp-for="ProductStock" class="form-control" readonly />
                    <span asp-validation-for="ProductStock" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="ProductId" />
                        <input type="submit" value="Confirm" class="btn btn-danger float-end" />
                    </form>
                    <a class="btn btn-outline-secondary" asp-action="Index">Go Back</a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {

}
