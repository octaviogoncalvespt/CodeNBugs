@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Products";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.ProductImage)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductDescription)</th>
                    <th>@Html.DisplayNameFor(model => model.CategoryId)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductPrice)</th>
                    <th>@Html.DisplayNameFor(model => model.ProductStock)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.ImgURL("codenbugssa","codenbugsproductsimg")" alt="@item.ProductName" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductName)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductDescription)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Category.CategoryName)
                        </td
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductPrice)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.ProductStock)
                            
                        </td>
                        <td class="align-middle">
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.ProductId"><i class="bi bi-pencil-square"></i>Edit</a> |
                            <a class="btn btn-outline-info" asp-action="ManagementDetails" asp-route-id="@item.ProductId"><i class="bi bi-eye"></i>Details</a> |
                            <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.ProductId"><i class="bi bi-trash"></i>Delete</a> 
                            
                        </td>
                        
                    </tr>
                }
            </tbody>

        </table>

    </div>
</div>
<div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
    <a asp-controller="Product" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
</div>