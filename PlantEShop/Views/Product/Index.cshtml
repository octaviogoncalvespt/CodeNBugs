@model IEnumerable<Product>

@{
    ViewData["Title"] = "List of Products";
}

<div class="row">
    @foreach (var item in Model)
    {
    <div class="col-md-4 col-xs-6 border-primary mb-3">
        <div class="card mb-3" style="max-width: 450px;">
            <div class="row g-0">
                <div class="col-md-12">
                    <div class="card-header text-white bg-info">
                        <p class="card-text">
                            <h5 class="card-title">
                                @item.ProductName
                                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                                    {
                                        <a class="text-white float-right" asp-action="Edit" asp-route-id="@item.ProductId"><i class="bi bi-pencil-square"></i></a>
                                    }

                            </h5>
                        </p>
                    </div>
                </div>
                <div class="col-md-6">
                        <img src="@item.ImgURL("codenbugssa","codenbugsproductsimg")" width="100%" alt="@item.ProductName">
                </div>
                <div class="col-md-6">
                    <div class="card-body">
                        <p class="card-text">@item.ProductDescription</p>
                        <p class="card-text ">
                            <b>Stock: @item.ProductStock </b>
                        </p>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="card-footer ">
                        <p class="card-text">
                            <a class="btn btn-outline-primary float-right" asp-action="Details" asp-route-id="@item.ProductId" >
                                <i class="bi bi-eye-fill"></i> Show Details
                            </a>
                                <a class="btn btn-success text-white" asp-controller="Orders" asp-action="AddItemToShoppingCart" asp-route-id="@item.ProductId">
                                    <i class="bi bi-cart-plus"></i> Add to Cart @item.ProductPrice.ToString("0.00")€
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    }

</div>

@if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
{
    <div style="position: fixed; right: 25px; bottom: 25px;" class="text-white">
        <a asp-controller="Product" asp-action="Create" class="btn btn-success"><i class="bi bi-plus-circle"></i>Add New</a>
    </div>
}